<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/verySmallMargin"
        android:layout_marginTop="@dimen/verySmallMargin"
        android:layout_marginRight="@dimen/smallMargin"
        app:cardCornerRadius="@dimen/smallRadius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/friend_req_ava"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="left"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/placeholder" />

            <TextView
                android:id="@+id/friend_req_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="имя дурака"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/bc_lightBlue"
                android:textSize="18sp" />

            <Button
                android:id="@+id/accept_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="0"
                android:background="@drawable/small_radius_round_element_blue"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/acceptFriendRequest"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorPrimaryDark"
                android:typeface="normal" />

            <ImageButton
                android:id="@+id/no_accept_request"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:layout_weight="0.15"
                android:background="@drawable/small_radius_rounded_element_orange"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/close" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>